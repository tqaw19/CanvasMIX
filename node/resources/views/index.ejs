<% include partials/_header %>

   <div class="container my-4 mx-0">
      <div class="row">
           <div class="col-md-4 my-4">
               <div class="card shadow-sm">
                   <div class="card-body">
                       <form action="/add" class="from-control" method="POST">
                           <div class="form-group">
                               <input type="text" name="nombre" placeholder="Ingrese Nombre" class="form-control my-1">
                           </div>
                           <div class="form-group">
                               <input type="text" name="apellidos" placeholder="Ingrese Apellidos" class="form-control my-1">
                           </div>
                           <div class="form-group">
                               <input type="text" name="correo" placeholder="Ingrese Correo" class="form-control my-1">
                           </div>
                           <div class="form-group">
                               <input type="date" name="fecha_nac" class="form-control my-1">
                           </div>
                           <button class="btn btn-outline-success btn-block my-1" type="submit"> Guardar </button>
                       </form>
                   </div>
               </div>
           </div>

           <div class="col-md-8">
               <table class="table table-bordered table-hover">
                   <thead>
                       <th>N°</th>
                       <th>Nombre</th>
                       <th>Apellido</th>
                       <th>Correo</th>
                       <th>Fecha de Nacimiento</th>
                       <th>Operación</th>
                   </thead>
                   <tbody>
                       <% for(var i = 0; i < tasks.length; i++){ %>
                        <tr>
                            <td>
                                <%= i + 1 %>
                            </td>
                            <td>
                                <%= tasks[i].nombre %>
                            </td>
                            <td>
                                <%= tasks[i].apellidos %>
                            </td>
                            <td>
                                <%= tasks[i].correo %>
                            </td>
                            <td>
                                <%= tasks[i].fecha_nac.toUTCString() %>
                            </td>
                            <td>
                                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-outline-info">Editar</a>
                                <a href="/delete/<%= tasks[i]._id %>" class="btn btn-outline-danger">Eliminar</a>
                            </td>
                        </tr>
                       <% } %>
                   </tbody>
               </table>
           </div>
        </div>
   </div>

<% include partials/_footer %>
